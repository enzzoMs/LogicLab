---
import {getEntry} from "astro:content";
import Section from "@components/shared/Section.astro";
import LessonCard from "@components/lessons/LessonCard.astro";

const lessons = [
  await getEntry("lessons", "introduction-to-boolean-algebra")!,
  await getEntry("lessons", "basic-logic-operations-and-or-not")!,
  await getEntry("lessons", "understanding-de-morgan-laws")!,
  await getEntry("lessons", "boolean-algebra-in-digital-systems-and-computing")!
]
---

<Section
  title="Learning Resources"
  subtitle="Enhance your understanding with comprehensive tutorials and guides">
  <div class="responsive-grid gap-m cols-1 cols-md-2">
    {lessons.sort((a, b) => a.data.order - b.data.order).map(lesson => (
      <LessonCard
        title={lesson.data.title}
        description={lesson.data.description}
        duration={lesson.data.minutesDuration}
        difficulty={lesson.data.difficulty}
        lessonName={lesson.id}/>
    ))}
  </div>
</Section>